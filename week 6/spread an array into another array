/* Example: Two segments of a match for a player */
const round1Stats = [
  { killCount: 2, deathCount: 0, headshots: 1, gnasherKills: 1, explosiveKills: 0, activeReloadBoost: true, jammedWeapon: false, spawnLocation: 1, enemyExecutions: 0 },
  { killCount: 3, deathCount: 1, headshots: 2, gnasherKills: 1, explosiveKills: 1, activeReloadBoost: false, jammedWeapon: false, spawnLocation: 2, enemyExecutions: 1 }
];

const round2Stats = [
  { killCount: 1, deathCount: 0, headshots: 0, gnasherKills: 1, explosiveKills: 0, activeReloadBoost: true, jammedWeapon: false, spawnLocation: 3, enemyExecutions: 0 },
  { killCount: 2, deathCount: 1, headshots: 1, gnasherKills: 0, explosiveKills: 1, activeReloadBoost: false, jammedWeapon: false, spawnLocation: 4, enemyExecutions: 0 }
];

console.log(combineArrays(round1Stats, round2Stats));

